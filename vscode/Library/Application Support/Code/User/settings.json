{
    "telemetry.telemetryLevel": "off",
    "workbench.colorTheme": "Catppuccin Mocha",
    "editor.fontFamily": "'Monaspace Neon Var', monospace",
    // "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
    "editor.inlineSuggest.fontFamily": "Monaspace Krypton Var",
    "editor.fontVariations": "'wght' 450",
    // 
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "editor.fontSize": 14,
    "git.confirmSync": false,
    // vs code vim 
    "vim.leader": ",",
    // vim plugins
    "vim.easymotion": true,
    "vim.camelCaseMotion.enable": true,
    // vim settings
    "vim.incsearch": true,
    "vim.useSystemClipboard": false,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // vim key bindings
    "vim.insertModeKeyBindings": [],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ":"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "n"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "l"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        {
            "before": [
                "<C-o>"
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                "workbench.action.navigateForward"
            ]
        },
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "files.insertFinalNewline": true,
    "terminal.external.osxExec": "Kitty.app",
    "terminal.integrated.fontSize": 16,
    "explorer.compactFolders": false,
    "files.autoSave": "afterDelay",
    "go.toolsManagement.autoUpdate": true,
    "workbench.iconTheme": "catppuccin-mocha",
    "terminal.integrated.fontFamily": "Monaspace Neon Var",
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "zig.zls.enabled": "on",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=./",
                "%DOCFILE%"
            ],
            "env": {}
        }
    ],
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "github.copilot.chat.newWorkspaceCreation.enabled": true,
    "github.copilot.advanced": {
        "authPermissions": "minimal"
    }
}
